<h1>Login</h1>
<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form method="post" action='/sessions'>
  <input type='text' name="user[email]" placeholder="Email">
  <input type='text' name="user[password]" placeholder="Password">
  <input type='submit' value='Login'>
</form>