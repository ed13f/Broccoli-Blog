<center><h1>Entries Posted By <%= @current_user.username%></h1></center>
<main role="main">
  <ul class="entries-list no-bullets no-padding">

    <% current_user.entries.each do |entry| %>
      <li class="entry-item pad-b-4">
        <a href="/entries/<%= entry.id %>" class="entry-title font-2 pad-b-1-4 c-white"><%= entry.title %></a>
        <span class="entry-date block font-3-4 c-lt-gray"><%= "Written on #{long_form_date(entry.created_at)} by #{entry.user_id}." %></span>
        <p class="entry-stub"><%= stub(entry.body) %></p>
      </li>
    <% end %>
  </ul>
</main>
